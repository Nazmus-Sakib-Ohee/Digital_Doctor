<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Nazmus_Sakib_Ohee.digital_doctor.Serial">


    <TextView
        android:id="@+id/patiantname"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Patiant Name :"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="140dp"
        android:hint="Name"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/patiantname"
        android:layout_toEndOf="@+id/number"
        android:layout_toRightOf="@+id/number"
        android:id="@+id/patiant" />

    <TextView
        android:id="@+id/number"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/patiant"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:text="Phone Number :"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView10"
        android:layout_width="180dp"
        android:layout_height="50dp"

        android:layout_alignTop="@+id/date"
        android:text="Date : "
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />






    <EditText
        android:id="@+id/editTextphonenumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/number"
        android:layout_toEndOf="@+id/number"
        android:layout_toRightOf="@+id/number"
        android:ems="10"
        android:hint="Number"
        android:inputType="numberDecimal|phone"
        android:text="" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/number"
        android:layout_toRightOf="@+id/number"
        android:ems="10"
        android:hint="Date"
        android:longClickable="false"
        android:focusable="false"
        />

    <Button
        android:id="@+id/getserial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="@drawable/shape"
        android:text="Get Serial"
        android:textAlignment="center"
        android:textColor="#2863d9"
        android:textSize="23dp"
        android:textStyle="bold" />



</RelativeLayout>
